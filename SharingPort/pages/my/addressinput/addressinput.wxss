/* pages/addressinput/addressinput.wxss */
page{
    background: #f1f1f1;
  }
  .input_group{
    height: 104rpx;
    width: 100%;
    margin-top: 30rpx;
    background: #fff;
    border: 2rpx solid #ddd;
    border-right: 0;
    border-left: 0;
    padding: 25rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    position: relative;
  }
  .input_group text{
    width: 100rpx;
    line-height: 50rpx;
  }
  .input_group input{
    flex: 1;
    padding-right: 140rpx;
    box-sizing: border-box;
  }
  .btn{
    width: 100%;
    height: 80rpx;
    margin-top: 100rpx;
    padding: 0 30rpx;
    color: #fff;
    box-sizing: border-box;
  }
  .btn view{
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 80rpx;
    background: rgb(24,99,63); 
    border-radius: 15rpx;
  }
  .copy{
    width: 140rpx;
    height: 50rpx;
    position: absolute;
    right: 30rpx;
    top: 25rpx;
  }
  .copy image{
    width: 50rpx;
    height: 50rpx;
    float: right;
  }
  .copy text{
    width: 90rpx;
    color: rgb(24,99,63);
    line-height: 50rpx;
    float: right;
    text-align: right;
  }