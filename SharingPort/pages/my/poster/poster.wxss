/* pages/poster/poster.wxss */
.container {
  min-height: 100%;
  background: linear-gradient(#c0dee7 0%, #c0dee7, #ffffff 92%);
  box-sizing: border-box;
} 
.container .cont{
  position: relative;
  z-index:2;
  /* margin-top: 150rpx; */
  padding: 110rpx 85rpx 0;
}
.container .bg{
  width: 100%;
  position: absolute;
  bottom: 0;
  z-index: 1;
}
.upload-bg{
  position: relative;
  width: 510rpx;
  height: 510rpx;
  background: #fff;
  margin: 0 auto;
  box-shadow: 0 0 24rpx 7rpx rgba(172, 212, 222, 0.44);
  padding: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.upload-bg::before{
  content: '';
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0.5);
  transform: rotate(-5deg);
}
.upload-bg .camera{
  width: 485rpx;
  height: 485rpx;
}
.upload-bg image{
  position: relative;
  z-index: 9;
}
.upload-cont{
  background-color: #f4f9fb;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.upload-show{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.upload-show image{
  max-width: 100%;
  max-height: 100%;
}
.upload-icon{
  position: relative;
  z-index: 2;
  background: #d0dadd;
  border-radius: 50%;
  width: 130rpx;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.upload-icon image{
  width: 56rpx;
  height: 46rpx;
}
.upload-text{
  font-size: 34rpx;
  font-weight: bold;
  margin-top: 20rpx;
  position: relative;
  z-index: 2;
}
.upload-btn{
  width: 360rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  font-weight: bold;
  background: rgba(61, 187, 188, 1);
  color:#fff;
  margin-top: 130rpx;
  border: none;
}
.upload-btn+.upload-btn{
  margin-top: 30rpx;
}
button::after{
  border: none;
}
.imagePathBox{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
}
.shengcheng{
  width: 80%;
  height: 80%;
  position: fixed;
  top: 50rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 10;
}
.save{
  display: inline-block;
  width: 40%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 50rpx;
  left: 8%;
  background: #ffe200;
  color: #333;
  font-size: 32rpx;
  border-radius: 44rpx;
}
.remake{
  left: 52%;
}
