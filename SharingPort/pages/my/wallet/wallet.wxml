<view class='title'>
  <image src='../img/card1.png' style='width:50rpx;height:50rpx; margin-right:20rpx;'></image>
  <text>我的账户</text>
</view>
<view class='card'>
  <view class='aaa'>
  
    <view class='card_wrap'>
      <view class='card_img'>
        <image src='../img/card.png' class='img'></image>
      </view>
      <view class='address'>
        <text>{{address}}</text>
      </view>
    </view>
    <view style='width:100%;height:1px;background:#fff;'></view>
    <view class='balance_info'>
      <view class='a1'>
        <text style='float:left;font-weight:bold'>积分</text>
        <text style='float:right;margin-left:30rpx;border:1px solid #fff;border-radius:10rpx;font-size:26rpx;padding:0 10rpx;font-size:9pt;' bindtap='copy'>复制账户</text>
        <text style='float:right;border:1px solid #fff;border-radius:10rpx;font-size:26rpx;padding:0 10rpx;font-size:9pt;' bindtap='fresh'>刷新积分</text>
      </view>
      <view class='a2'><text>{{balance}}</text></view>
    </view>
  </view>
</view>
