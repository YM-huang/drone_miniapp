    <text class='abc'>扫码</text>
  </view>
  <view class='menu_bar_item' bindtap='gotoCollect'>
    <image src='../img/getb.png' style='width:50rpx;height:50rpx;'></image>
    <text class='abc'>接受积分</text>
  </view>
  <view bindtap="post" class='menu_bar_item'>
    <image src='../img/transb.png' style='width:50rpx;height:50rpx;'></image>
    <text class='abc'>积分充值</text>
  </view>
  <view bindtap='gotoHis' class='menu_bar_item'>
    <image src='../img/hisb.png' style='width:50rpx;height:50rpx;'></image>
    <text class='abc'>记录</text>
  </view>
</view>
