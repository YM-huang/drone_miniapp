/* pages/home/home.wxss */
.menu{
    width: 100%;
    height: 230rpx;
    box-sizing: border-box;
    padding:15rpx 30rpx;
  }
  .menu_bar{
    height: 200rpx;
    width: 100%;
    display: flex;
    box-shadow: 0px 2px 20px 0px rgba(0, 0, 0, 0.2);
  }
  .menu_bar_item{
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  .menu_content{
    width:100%;
    height: 100%;
    display: flex;
  }
  .menu_item{
    flex: 1;
    height: 200rpx;
    background: #000;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: #fff;
    font-size: 30rpx;
  }
  .menu_item1{
    background: #FF9900;
  }
  .menu_item2{
    background: #FF9933;
  }
  .menu_item3{
    background: #FF9966;
  }
  .menu_item4{
    background: #FF9999;
  }
  .menu1{
    box-shadow: 10px 5px 20px -8px rgba(0, 0, 0, 0.3);
  }
  .balance{
    width: 100%;
    height: 80rpx;
    padding: 0 30rpx;
    font-size: 90rpx;
    font-weight: bold;box-sizing: border-box;
    line-height: 80rpx;
    color:#00DB4B;
  }
  .title{
    width: 100%;
    height: 80rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }
  .card{
    width: 100%;
    height: 360rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    position: relative;
  }
  .card .aaa{
    width: 100%;
    height: 100%;
    background: #1296DB;
    border-radius: 10rpx;
  }
  .card_wrap{
    width: 100%;
    height: 180rpx;
    display: flex;
  }
  .card_img{
    width:150rpx;
    height:100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .address{
    flex: 1;
    display: flex;
    justify-content: center;
    flex-direction: column;
    color: #fff;
    padding-right: 30rpx;
    box-sizing: border-box;
  }
  .img{
    width: 100rpx;
    height: 100rpx;
  }
  .address text{
    word-break: break-all;
  }
  .copy{
    color: #fff;
    border: 1px solid #fff;
    border-radius: 5px;
    position: absolute;
    right: 60rpx;
    bottom: 30rpx;
    font-size: 30rpx;
    padding: 4rpx 8rpx;
  }
  .abc{
    margin-top: 10rpx;
    color:rgb(163,166,183);
    font-size:10pt;
  }
  .balance_info{
    height: 170rpx;
    width: 100%;
    padding:15rpx 30rpx;
    box-sizing: border-box;
    color: #fff;
  }
  .a1{
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
  }
  .a2{
    width: 100%;
    height: 100rpx;
    font-size: 65rpx;
    font-weight: bold;
  }