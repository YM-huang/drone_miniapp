/* pages/collectMoney/collectMoney.wxss */
.container-box{
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f1f1f1;
    height: 100vh}
  .img-wrap{
    width: 700rpx;
    height: 950rpx;
    background: #fff;
    border-radius: 30rpx;
    overflow: hidden;
  }
  .title{
    width: 100%;
    height: 150rpx;
    text-align: center;
    line-height: 149rpx;
    box-sizing: border-box;
    background: rgb(24,99,63);
    color: #fff;
    border-bottom: 1px solid rgb(24,99,63);
  }
  .img{
    width: 100%;
    height: 800rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .ab{
    height: 50rpx;
    width: 500rpx;
    display: flex;
    line-height: 50rpx;
    margin: 50rpx 0;
    color: #000;
  }
  .a{
    flex: 1;
    text-align: center;
    border-right: 1px solid #e5e5e5;
  }
  .b{
    flex: 1;
    text-align: center;
  }
  .img image{
    width: 600rpx;
    height: 600rpx;
  }
  .setValue{
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 10;
    top: 100%;
    transition: all 0.2s;
    background: #f5f5f5;
  }
  .show{
    top: 0;
  }
  .cancelSet{
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-top: 15rpx;
  }
  .input_value{
    height: 90rpx;
    width: 100%;
    background: #fff;
    margin-top: 15rpx;
    border-top: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }
  .input_value .content{
    height: 60rpx;
    width: 100%;
    display: flex;
  }
  .input_value .content text{
    width: 100rpx;
    line-height: 60rpx;
  }
  .input_value .content input{
    flex: 1;
    height: 100%;
  }
  .yuan{
    width: 100%;
    height: 80rpx;
    margin-top: 40rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
  }
  .yuan .btn{
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    background: rgb(24,99,63);
    border-radius: 10rpx;
  }
  .amount{
    width: 100%;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-weight: bold;
  }
  .canvas-box{position: fixed;top:999999rpx;left: 0}